
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ycpshuttle.ycpapps.ycp.edu.ycpshuttle.DetailActivityFragment"
    android:rowCount="4"
    android:columnCount="3"
    tools:showIn="@layout/activity_detail">

    <TextView
        android:layout_column="0"
        android:layout_row="0"
        android:minHeight="15dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:padding="10dp"
        android:id="@+id/detail_time_text"
        android:text="@string/loading_indicator"
        />

    <TextView
        android:layout_column="0"
        android:layout_row="1"
        android:minHeight="15dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:padding="10dp"
        android:id="@+id/detail_time2_text"
        android:text="@string/loading_indicator"
        />

    <TextView
        android:layout_column="1"
        android:layout_row="0"
        android:minHeight="15dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:padding="10dp"
        android:id="@+id/detail_arrival_time"
        android:text="@string/loading_indicator"
        />

</GridLayout>